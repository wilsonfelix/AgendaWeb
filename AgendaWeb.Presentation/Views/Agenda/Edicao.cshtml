@model AgendaWeb.Presentation.Models.EventoEdicaoViewModel
<h5>Edição de Evento</h5>
<p>
    Utilize os campos para editar um evento de sua agenda.
</p>
<hr/>

@using(Html.BeginForm())
{
    <!-- Campo Oculto -->
    @Html.HiddenFor(model => model.Id)
    <div class="row mb-3">
        <div class="col-md-6">
            <b><label>Nome do evento:</label></b>
            @Html.TextBoxFor(model => model.Nome, new {@class = "form-control"})
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Nome)
            </span>
        </div>
        <div class="col-md-3">
            <b><label>Data do evento:</label></b>
            @Html.TextBoxFor(model => model.Data, new {@class = "form-control", @type = "date"})
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Data)
            </span>
        </div>
        <div class="col-md-3">
            <b><label>Hora do evento:</label></b>
            @Html.TextBoxFor(model => model.Hora, new {@class = "form-control", @type = "time"})
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Hora)
            </span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <b><label>Descrição do evento:</label></b>
            @Html.TextAreaFor(model => model.Descricao, new {@class = "form-control"})
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Descricao)
            </span>
        </div>
        <div class="col-md-3">
            &nbsp;&nbsp;
            <b><label>Tipo do Prioridade:</label></b><br />
            &nbsp;&nbsp;
            @Html.RadioButtonFor(model => model.Prioridade, "1") <span>Baixa</span><br />
            &nbsp;&nbsp;
            @Html.RadioButtonFor(model => model.Prioridade, "2") <span>Média</span><br />
            &nbsp;&nbsp;
            @Html.RadioButtonFor(model => model.Prioridade, "3") <span>Alta</span><br />
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Prioridade)
            </span>
        </div>
        <div class="col-md-3">
            &nbsp;&nbsp;
            <b><label>Tipo do Evento:</label></b><br />
            &nbsp;&nbsp;
            @Html.RadioButtonFor(model => model.Ativo, "1") <span>Evento Ativo</span><br />
            &nbsp;&nbsp;
            @Html.RadioButtonFor(model => model.Ativo, "0") <span>Evento Inativo</span><br />
            &nbsp;&nbsp;
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Prioridade)
            </span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <input type="submit" value="Salvar Alterações" 
            class="btn btn-primary"/>
            <a href="/Agenda/Consulta" 
            class="btn btn-secondary">Cancelar</a>
        </div>
    </div>

}