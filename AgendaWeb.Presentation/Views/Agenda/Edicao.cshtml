@model AgendaWeb.Presentation.Models.EventoEdicaoViewModel
<h5>Edição de Evento</h5>
<p>
    Utilize os campos para editar um evento de sua agenda.
</p>
<hr/>

@using(Html.BeginForm())
{
    <!-- Campo Oculto -->
    @Html.HiddenFor(model => model.Id)
    <div class="row mb-3">
        <div class="col-md-6">
            <label>Nome do evento:</label>
            @Html.TextBoxFor(model => model.Nome, new {@class = "form-control"})
            <span class=" = "text-danger">
                @Html.ValidationMessageFor(model => model.Nome)
            </span>
        </div>
        <div class="col-md-3">
            <label>Data do evento:</label>
            @Html.TextBoxFor(model => model.Data, new {@type = "date", @class = "form-control"})
            <span class=" = " text-danger">
                @Html.ValidationMessageFor(model => model.Data)
            </span>
        </div>
        <div class="col-md-3">
            <label>Hora do evento:</label>
            @Html.TextBoxFor(model => model.Hora, new {@type = "time", @class = "form-control"})
            <span class=" = " text-danger">
                @Html.ValidationMessageFor(model => model.Hora)
            </span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label>Descrição do evento:</label>
            @Html.TextAreaFor(model => model.Descricao, new {@class = "form-control"})
            <span class=" = "text-danger">
                @Html.ValidationMessageFor(model => model.Descricao)
            </span>
        </div>
        <div class="col-md-3">
            <label>Prioridade do evento:</label>
            <br />
            @Html.RadioButtonFor(model => model.Prioridade, "1") <label>Baixa</label>
            @Html.RadioButtonFor(model => model.Prioridade, "2") <label>Média</label>
            @Html.RadioButtonFor(model => model.Prioridade, "3") <label>Alta</label>
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Prioridade)
            </span>
        </div>
        <div class="col-md-3">
            
            <br />
            @Html.RadioButtonFor(model => model.Ativo, "1") <label>Evento Ativo</label>
            @Html.RadioButtonFor(model => model.Ativo, "0") <label>Evento Inativo</label>
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Prioridade)
            </span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <input type="submit" value="Salvar Alterações" 
            class="btn btn-primary"/>
            <a href="/Agenda/Consulta" 
            class="btn btn-secondary">Cancelar</a>
        </div>
    </div>

}
