@model AgendaWeb.Presentation.Models.EventoCadastroViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cadastro</title>
</head>
<body>

    <h5>Cadastro de Evento</h5>
    <p>Preencha os campos para criar um evento em sua agenda.</p>
    <hr/>
    @using (Html.BeginForm())
    {
    <div class = "row mb-3">
         <div class = "col-md-3">
            <label>Nome do evento: </label>
            @Html.TextBoxFor(model => model.Nome, new{@class = "form-control"})
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Nome)
            </span>
        </div>
         <div class = "col-md-3">
            <label>Data do evento: </label>
            @Html.TextBoxFor(model => model.Data, new{@class = "form-control", type="date"})
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Data)
            </span>
        </div>
         <div class = "col-md-3">
            <label>Hora do evento: </label>
            @Html.TextBoxFor(model => model.Hora, new{@class = "form-control", type="time"})
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Hora)
            </span>
        </div>
        <div class = "col-md-3">
            <label>Descrição do evento: </label>
            @Html.TextBoxFor(model => model.Descricao, new{@class = "form-control"})
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Descricao)
            </span>
        </div>
        <div class = "col-md-3">
            <label>Prioridade do evento:</label>
                <br/>
                @Html.RadioButtonFor(model => model.Prioridade, "1") <label>Baixa</label>
                @Html.RadioButtonFor(model => model.Prioridade, "2") <label>Média</label>
                @Html.RadioButtonFor(model => model.Prioridade, "3") <label>Alta</label>
           <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Prioridade)
           </span>
        </div>

    </div>

    <div class = "row mb-3">
        <div class="col-md-12">
           <input class="btn btn-primary" type="submit" value = "Cadastrar"/>
        </div>
    </div>
    }
</body>
</html>
